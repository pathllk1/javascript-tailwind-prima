<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/output.css">
  <script src="/js/auth.js" defer></script>
  <script src="/js/dropdown.js" defer></script>
  <script src="/js/timer.js" defer></script>
  <script src="/js/toast.js" defer></script>
  <title><%= typeof title !== 'undefined' ? title : 'MyApp' %></title>
</head>
<body class="bg-gray-100">

<!-- Top Fixed Gradient Header -->
  <header class="fixed top-0 left-0 w-full h-16 bg-gradient-to-r from-blue-500 to-purple-600 text-white flex items-center justify-between px-6 shadow-md z-50">
    <!-- Left: Logo or Brand -->
    <div class="text-xl font-bold">MyApp</div>
    
    <!-- Center: Timer container -->
    <% if (typeof tokenExpiration !== 'undefined' && tokenExpiration) { %>
      <div id="timer-container" class="flex-grow flex justify-center items-center" data-expiration="<%= tokenExpiration %>"></div>
    <% } else { %>
      <div id="timer-container" class="flex-grow flex justify-center items-center"></div>
    <% } %>

    <!-- Right: Navigation -->
    <nav class="flex space-x-4 items-center">
      <a href="/" class="hover:underline">Home</a>
      <a href="/about" class="hover:underline">About</a>
      <a href="/contact" class="hover:underline">Contact</a>
      
      <% if (typeof user !== 'undefined' && user) { %>
        <a href="/excel" class="hover:underline">Excel</a>
        <!-- Authenticated user menu -->
        <div class="relative">          <button id="user-menu-button" class="flex items-center space-x-1 hover:underline" aria-haspopup="true" aria-expanded="false">
            <span><%= user.name || user.uname %></span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd" />
            </svg>
          </button>
          <div id="user-menu" class="absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 hidden" role="menu">
            <a href="/profile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Profile</a>
            <a href="/settings" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Settings</a>
            <a href="/auth/logout" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Logout</a>
          </div>
        </div>
      <% } else { %>
        <!-- Guest menu -->
        <a href="/auth/login" class="hover:underline">Login</a>
        <a href="/auth/signup" class="bg-white text-blue-600 px-3 py-1 rounded hover:bg-gray-100">Sign Up</a>
      <% } %>
    </nav>
  </header>

  <!-- Page content -->
  <main class="pt-16 pb-16 min-h-screen">