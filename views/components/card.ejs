<%#
Card component for consistent content containers
Parameters:
- title: Card title (optional)
- footer: Card footer content (optional)
- classes: additional classes (optional)
- id: element ID (optional)
- children: Card content (required)
%>

<% const cardTitle = typeof title !== 'undefined' ? title : ''; %>
<% const cardFooter = typeof footer !== 'undefined' ? footer : ''; %>
<% const additionalClasses = typeof classes !== 'undefined' ? classes : ''; %>
<% const elementId = typeof id !== 'undefined' ? `id="${id}"` : ''; %>

<div class="bg-white rounded-lg shadow-md overflow-hidden <%= additionalClasses %>" <%= elementId %>>
  <% if (cardTitle) { %>
    <div class="px-6 py-4 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900"><%= cardTitle %></h3>
    </div>
  <% } %>
  
  <div class="p-6">
    <%- typeof children !== 'undefined' ? children : '' %>
  </div>
  
  <% if (cardFooter) { %>
    <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
      <%= cardFooter %>
    </div>
  <% } %>
</div>