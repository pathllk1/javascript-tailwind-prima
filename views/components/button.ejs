<%#
Button component for consistent UI buttons
Parameters:
- type: 'primary', 'secondary', 'danger', 'success' (optional, default: 'primary')
- size: 'small', 'medium', 'large' (optional, default: 'medium')
- href: URL for link button (optional)
- submit: boolean for submit button (optional, default: false)
- disabled: boolean (optional, default: false)
- classes: additional classes (optional)
- id: element ID (optional)
- text: button text (required)
%>

<% const buttonType = typeof type !== 'undefined' ? type : 'primary'; %>
<% const buttonSize = typeof size !== 'undefined' ? size : 'medium'; %>
<% const isSubmit = typeof submit !== 'undefined' ? submit : false; %>
<% const isDisabled = typeof disabled !== 'undefined' ? disabled : false; %>
<% const additionalClasses = typeof classes !== 'undefined' ? classes : ''; %>
<% const elementId = typeof id !== 'undefined' ? `id="${id}"` : ''; %>
<% const buttonText = typeof text !== 'undefined' ? text : 'Button'; %>

<% const typeClasses = {
  primary: 'bg-blue-500 hover:bg-blue-700 text-white',
  secondary: 'bg-gray-500 hover:bg-gray-700 text-white',
  danger: 'bg-red-500 hover:bg-red-700 text-white',
  success: 'bg-green-500 hover:bg-green-700 text-white'
}; %>

<% const sizeClasses = {
  small: 'px-3 py-1 text-sm',
  medium: 'px-4 py-2',
  large: 'px-6 py-3 text-lg'
}; %>

<% const baseClasses = 'font-bold rounded focus:outline-none focus:shadow-outline'; %>
<% const disabledClass = isDisabled ? 'opacity-50 cursor-not-allowed' : ''; %>

<% if (typeof href !== 'undefined') { %>
  <a href="<%= href %>" 
     class="<%= typeClasses[buttonType] %> <%= sizeClasses[buttonSize] %> <%= baseClasses %> <%= disabledClass %> <%= additionalClasses %>"
     <%= elementId %>
     <%= isDisabled ? 'aria-disabled="true"' : '' %>>
    <%= buttonText %>
  </a>
<% } else { %>
  <button 
    type="<%= isSubmit ? 'submit' : 'button' %>"
    class="<%= typeClasses[buttonType] %> <%= sizeClasses[buttonSize] %> <%= baseClasses %> <%= disabledClass %> <%= additionalClasses %>"
    <%= elementId %>
    <%= isDisabled ? 'disabled' : '' %>>
    <%= buttonText %>
  </button>
<% } %>