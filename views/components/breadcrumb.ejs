<%#
Breadcrumb component for navigation hierarchy
Parameters:
- items: Array of breadcrumb items [{text, href}] (required)
%>

<% const breadcrumbItems = typeof items !== 'undefined' ? items : []; %>

<% if (breadcrumbItems.length > 0) { %>
  <nav class="mb-4" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm">
      <% breadcrumbItems.forEach(function(item, index) { %>
        <li class="flex items-center">
          <% if (index < breadcrumbItems.length - 1) { %>
            <a href="<%= item.href %>" class="text-blue-600 hover:text-blue-800 hover:underline">
              <%= item.text %>
            </a>
            <svg class="w-4 h-4 mx-2 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          <% } else { %>
            <span class="text-gray-500"><%= item.text %></span>
          <% } %>
        </li>
      <% }); %>
    </ol>
  </nav>
<% } %>