<%#
Modal component for displaying overlay dialogs
Parameters:
- id: Modal ID (required)
- title: Modal title (optional)
- closable: Boolean to show/hide close button (optional, default: true)
- classes: Additional classes (optional)
%>

<% const modalId = typeof id !== 'undefined' ? id : 'modal'; %>
<% const modalTitle = typeof title !== 'undefined' ? title : ''; %>
<% const isClosable = typeof closable !== 'undefined' ? closable : true; %>
<% const additionalClasses = typeof classes !== 'undefined' ? classes : ''; %>

<div id="<%= modalId %>" class="fixed inset-0 z-50 overflow-y-auto hidden <%= additionalClasses %>">
  <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
    <!-- Background overlay -->
    <div class="fixed inset-0 transition-opacity" aria-hidden="true">
      <div class="absolute inset-0 bg-gray-500 opacity-75"></div>
    </div>
    
    <!-- Modal container -->
    <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
    
    <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
      <!-- Modal header -->
      <div class="px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse items-center justify-between border-b">
        <% if (modalTitle) { %>
          <h3 class="text-lg leading-6 font-medium text-gray-900"><%= modalTitle %></h3>
        <% } %>
        
        <% if (isClosable) { %>
          <button type="button" class="close-modal text-gray-400 hover:text-gray-500 focus:outline-none" data-modal="<%= modalId %>">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        <% } %>
      </div>
      
      <!-- Modal body -->
      <div class="px-4 py-5 sm:p-6">
        <%- typeof children !== 'undefined' ? children : '' %>
      </div>
    </div>
  </div>
</div>