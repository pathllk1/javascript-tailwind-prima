<%- include('../../layout/header') %>

<div class="w-full min-h-screen pt-16 pb-16 p-4 sm:p-6">
  <div class="w-full mx-auto">
    <div class="bg-white rounded-lg shadow-md p-6 w-full">

      <div class="flex flex-col gap-4 mb-6 md:flex-row md:items-center md:justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Live Stock Data</h1>
          <p class="text-sm text-gray-500 mt-1">Live updates + fallback polling</p>
        </div>
        <div class="flex flex-col sm:flex-row sm:items-center gap-3">
          <div class="relative">
            <input id="stock-search" type="text" placeholder="Search symbol or name" class="w-64 border rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-300 text-sm">
            <span class="absolute right-3 top-2.5 text-gray-400 text-sm">üîç</span>
          </div>
          <span id="last-updated" class="text-sm text-gray-500"></span>
          <button id="refresh-btn" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Refresh Data
          </button>
        </div>
      </div>
      
      <div id="loading-indicator" class="hidden mb-4">
        <div class="flex items-center justify-center">
          <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500"></div>
          <span class="ml-3 text-gray-600">Loading live data...</span>
        </div>
      </div>
      
      <div id="progress-container" class="w-full bg-gray-200 rounded-full h-2.5 mb-4 hidden">
        <div id="progress-bar" class="bg-blue-600 h-2.5 rounded-full" style="width: 0%"></div>
      </div>
      
      <div id="error-message" class="hidden bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4"></div>
      
      <!-- Top Performers Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3 mb-4">
        <div id="top-gainers" class="bg-gradient-to-r from-green-50 to-emerald-50 border border-green-200 rounded-lg shadow-sm p-3">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-sm font-bold text-gray-800">Top Gainers</h3>
            <span class="text-xs text-gray-500">‚ñ≤</span>
          </div>
          <div class="grid grid-cols-2 gap-1">
            <div class="flex items-center justify-between p-1 text-xs">
              <div class="flex items-center">
                <span class="w-4 h-4 flex items-center justify-center text-[9px] font-bold text-white bg-green-500 rounded mr-1">1</span>
                <div class="truncate max-w-[70px]">
                  <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-12"></div>
                </div>
              </div>
              <div class="text-right">
                <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-16"></div>
                <div class="text-[9px] bg-gray-200 rounded animate-pulse h-2 w-10 mt-1"></div>
              </div>
            </div>
            <div class="flex items-center justify-between p-1 text-xs">
              <div class="flex items-center">
                <span class="w-4 h-4 flex items-center justify-center text-[9px] font-bold text-white bg-green-500 rounded mr-1">2</span>
                <div class="truncate max-w-[70px]">
                  <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-16"></div>
                </div>
              </div>
              <div class="text-right">
                <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-12"></div>
                <div class="text-[9px] bg-gray-200 rounded animate-pulse h-2 w-12 mt-1"></div>
              </div>
            </div>
          </div>
        </div>
        
        <div id="top-losers" class="bg-gradient-to-r from-red-50 to-rose-50 border border-red-200 rounded-lg shadow-sm p-3">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-sm font-bold text-gray-800">Top Losers</h3>
            <span class="text-xs text-gray-500">‚ñº</span>
          </div>
          <div class="grid grid-cols-2 gap-1">
            <div class="flex items-center justify-between p-1 text-xs">
              <div class="flex items-center">
                <span class="w-4 h-4 flex items-center justify-center text-[9px] font-bold text-white bg-red-500 rounded mr-1">1</span>
                <div class="truncate max-w-[70px]">
                  <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-12"></div>
                </div>
              </div>
              <div class="text-right">
                <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-16"></div>
                <div class="text-[9px] bg-gray-200 rounded animate-pulse h-2 w-10 mt-1"></div>
              </div>
            </div>
            <div class="flex items-center justify-between p-1 text-xs">
              <div class="flex items-center">
                <span class="w-4 h-4 flex items-center justify-center text-[9px] font-bold text-white bg-red-500 rounded mr-1">2</span>
                <div class="truncate max-w-[70px]">
                  <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-16"></div>
                </div>
              </div>
              <div class="text-right">
                <div class="font-medium bg-gray-200 rounded animate-pulse h-3 w-12"></div>
                <div class="text-[9px] bg-gray-200 rounded animate-pulse h-2 w-12 mt-1"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="overflow-x-auto w-full">
        <table id="stock-table" class="min-w-full w-full divide-y divide-gray-200">
          <thead class="text-white" style="background: linear-gradient(90deg, #ef4444, #22c55e);">
            <tr>
              <th class="px-4 py-3 text-left text-xs font-medium uppercase tracking-wider select-none">View</th>
              <th data-sort-key="symbol" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider cursor-pointer select-none">Symbol</th>
              <th data-sort-key="name" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider cursor-pointer select-none">Name</th>
              <th data-sort-key="currentPrice" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider cursor-pointer select-none">Current Price</th>
              <th data-sort-key="previousClose" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider cursor-pointer select-none">Previous Close</th>
              <th data-sort-key="dayRange" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider cursor-pointer select-none">Day Range</th>
              <th data-sort-key="changePercent" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider cursor-pointer select-none">Change (%)</th>
              <th data-sort-key="volume" class="px-6 py-3 text-left text-xs font-medium uppercase tracking-wider cursor-pointer select-none">Volume</th>
            </tr>
          </thead>
          <tbody id="stock-data" class="bg-white divide-y divide-gray-200">
            <!-- Data will be populated by JavaScript -->
          </tbody>
        </table>
      </div>
      <!-- Modal (placed outside overflow to avoid clipping) -->
      <div id="stock-modal" class="fixed inset-0 z-50 hidden flex items-center justify-center bg-black/50">
        <div class="bg-white rounded-lg shadow-xl w-full mx-4 p-6 relative max-w-5xl lg:w-4/5 h-[80vh] overflow-hidden">
          <button id="stock-modal-close" class="absolute top-3 right-3 text-gray-500 hover:text-gray-700 text-xl leading-none">&times;</button>
          <div class="h-full flex flex-col">
            <div class="flex items-center gap-2 border-b border-gray-200 pb-2 pr-8">
              <button id="stock-modal-tab-main" type="button" class="px-3 py-1.5 text-sm font-medium rounded-md bg-gray-900 text-white">Main View</button>
              <button id="stock-modal-tab-data" type="button" class="px-3 py-1.5 text-sm font-medium rounded-md bg-gray-100 text-gray-700 hover:bg-gray-200">Data View</button>
              <button id="stock-modal-tab-tech" type="button" class="px-3 py-1.5 text-sm font-medium rounded-md bg-gray-100 text-gray-700 hover:bg-gray-200">Technical Indicators</button>
            </div>
            <div class="flex-1 overflow-hidden pt-3">
              <div id="stock-modal-panel-main" class="h-full overflow-auto overflow-x-auto space-y-2 text-sm text-gray-800">
                <div id="stock-modal-content" class="space-y-2"></div>
              </div>
              <div id="stock-modal-panel-data" class="hidden h-full overflow-auto overflow-x-auto space-y-3 text-sm text-gray-800">
              </div>
              <div id="stock-modal-panel-tech" class="hidden h-full overflow-auto overflow-x-auto space-y-3 text-sm text-gray-800">
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/vendor/chartjs/chart.umd.min.js" nonce="<%= typeof cspNonce !== 'undefined' ? cspNonce : '' %>"></script>

<%- include('../../layout/footer') %>
