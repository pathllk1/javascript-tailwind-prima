<%- include('../layout/header') %>

<div class="max-w-4xl mx-auto p-6">
  <h1 class="text-3xl font-bold mb-6">Account Settings</h1>
  
  <% if (typeof user !== 'undefined' && user) { %>
    <div class="bg-white rounded-lg shadow-md p-6">
      <div class="mb-6 border-b pb-4">
        <h2 class="text-2xl font-semibold">Profile Settings</h2>
        <p class="text-gray-600">Manage your personal information</p>
      </div>
      
      <form class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="name" class="block text-gray-700 font-medium mb-2">Full Name</label>
            <input 
              type="text" 
              id="name" 
              name="name" 
              value="<%= user.name || '' %>"
              class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
            >
          </div>
          
          <div>
            <label for="uname" class="block text-gray-700 font-medium mb-2">Username</label>
            <input 
              type="text" 
              id="uname" 
              name="uname" 
              value="<%= user.uname %>"
              class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
            >
          </div>
          
          <div>
            <label for="email" class="block text-gray-700 font-medium mb-2">Email Address</label>
            <input 
              type="email" 
              id="email" 
              name="email" 
              value="<%= user.email %>"
              class="w-full border border-gray-300 rounded-lg p-3 focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
            >
          </div>
        </div>
        
        <div class="flex justify-end">
          <button 
            type="submit"
            class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600 transition-colors duration-300"
          >
            Save Changes
          </button>
        </div>
      </form>
      
      <div class="mt-10 pt-6 border-t">
        <div class="mb-6 border-b pb-4">
          <h2 class="text-2xl font-semibold">Security Settings</h2>
          <p class="text-gray-600">Manage your account security</p>
        </div>
        
        <div class="space-y-4">
          <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
            <div>
              <h3 class="font-medium">Change Password</h3>
              <p class="text-gray-600 text-sm">Update your password regularly for better security</p>
            </div>
            <button class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-100">
              Change
            </button>
          </div>
          
          <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
            <div>
              <h3 class="font-medium">Two-Factor Authentication</h3>
              <p class="text-gray-600 text-sm">Add an extra layer of security to your account</p>
            </div>
            <button class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-100">
              Enable
            </button>
          </div>
          
          <div class="flex justify-between items-center p-4 bg-gray-50 rounded-lg">
            <div>
              <h3 class="font-medium">Active Sessions</h3>
              <p class="text-gray-600 text-sm">View and manage devices connected to your account</p>
            </div>
            <button class="bg-white border border-gray-300 text-gray-700 px-4 py-2 rounded-lg hover:bg-gray-100">
              View
            </button>
          </div>
        </div>
      </div>
      
      <div class="mt-10 pt-6 border-t">
        <div class="mb-6 border-b pb-4">
          <h2 class="text-2xl font-semibold text-red-600">Danger Zone</h2>
          <p class="text-gray-600">Actions in this section are irreversible</p>
        </div>
        
        <div class="p-4 bg-red-50 rounded-lg">
          <div class="flex justify-between items-center">
            <div>
              <h3 class="font-medium text-red-700">Delete Account</h3>
              <p class="text-red-600 text-sm">Permanently delete your account and all associated data</p>
            </div>
            <button class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700">
              Delete Account
            </button>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="bg-white rounded-lg shadow-md p-6 text-center">
      <h2 class="text-xl font-semibold mb-4">Access Denied</h2>
      <p class="mb-4">You need to be logged in to view this page.</p>
      <div class="space-x-4">
        <a href="/auth/login" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">Login</a>
        <a href="/auth/signup" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">Sign Up</a>
      </div>
    </div>
  <% } %>
</div>

<%- include('../layout/footer') %>