<%- include('../layout/header') %>

<div class="w-full p-4 sm:p-6 flex justify-center items-center mt-10">
  <div class="w-full max-w-md p-6 bg-white rounded-lg shadow-md">
    <h2 class="text-2xl font-bold mb-6 text-center">Login</h2>
    
    <!-- Hidden divs to pass messages to JavaScript -->
    <% if (typeof success !== 'undefined' && success) { %>
      <div id="success-message" class="hidden"><%= success %></div>
    <% } else { %>
      <div id="success-message" class="hidden"></div>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error) { %>
      <div id="error-message" class="hidden"><%= error %></div>
    <% } else { %>
      <div id="error-message" class="hidden"></div>
    <% } %>
    
    <form action="/auth/login" method="POST">
      <%- include('../components/formField', {name: 'email', label: 'Email', type: 'email', required: true}) %>
      
      <%- include('../components/formField', {name: 'password', label: 'Password', type: 'password', required: true}) %>
      
      <div class="flex items-center justify-between">
        <%- include('../components/button', {type: 'primary', text: 'Login', submit: true}) %>
        
        <%- include('../components/button', {type: 'secondary', text: 'Sign Up', href: '/auth/signup'}) %>
      </div>
    </form>
  </div>
</div>

<%- include('../layout/footer') %>